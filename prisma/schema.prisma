generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FlightStrip {
  id               String   @id @default(uuid())
  callsign         String
  aircraftType     String
  numberOfAircrafts Int     @default(1)
  missionType      String
  origin           String
  destination      String
  route            String   @default("")
  altitude         Int
  column           String   // Can be: "ground", "tower", or "TRACON"
  area             String   @default("main") // Can be: "main" or "handoff"
  position         Int      @default(0) // Position within the column+area for ordering
  remarks          String   @default("")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
