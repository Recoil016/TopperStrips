generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FlightStrip {
  id               String   @id @default(uuid())
  callsign         String
  aircraftType     String
  numberOfAircrafts Int     @default(1)
  missionType      String
  origin           String
  destination      String
  altitude         Int
  column           String   // Can be: "ground", "tower", or "TRACON"
  position         Int      @default(0) // Position within the column for ordering
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
